<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="100"
             x:Class="SummerSchoolGUI.FloatView"
			 xmlns:vm="clr-namespace:SummerSchoolGUI.ViewModels.Primitives"
			 x:DataType="vm:FloatViewModel">
	<Design.DataContext>
		<vm:FloatViewModel />
	</Design.DataContext>
	<DockPanel Margin="5">
		<!--X position label-->
		<Label 
			   x:Name="FloatLabel"
			   Content="{Binding PropertyName}"
			   DockPanel.Dock="Left"
			   VerticalAlignment="Center"
			   HorizontalAlignment="Left"
			   Margin="5"/>
		<!--X position textbox-->
		<TextBox x:Name="FloatValue"
				 DockPanel.Dock="Right"
			     Text="{Binding Value}"
				 MinWidth="0"
				 HorizontalAlignment="Stretch"
				 VerticalAlignment="Center"/>
	</DockPanel>
</UserControl>
